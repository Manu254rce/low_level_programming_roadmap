# Vars

ASSEMBLER=nasm
LINKER=ld
ASSEMBLER_FLAGS=-f elf
LINKER_FLAGS=-m elf_i386
SRCDIR=src
OBJDIR=obj
EXECUTABLE=out

SRC=$(SRCDIR)/$(FILE).s
OBJ=$(OBJDIR)/$(FILE).o

all: $(EXECUTABLE)

$(EXECUTABLE): $(OBJ)
	$(LINKER) $(LINKER_FLAGS) -o $@ $^

$(OBJDIR)/%.o: $(SRCDIR)/%.s
	mkdir -p $(OBJDIR)
	$(ASSEMBLER) $(ASSEMBLER_FLAGS) -o $@ $<

clean:
	rm -f $(OBJDIR)/*.o $(EXECUTABLE)

.PHONY: all clean
